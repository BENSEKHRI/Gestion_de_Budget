{% extends 'base.html.twig' %}

{% block title %}Work Flow{% endblock %}

{% block body %}


<head>

    <meta content="" name="keywords">
    <meta content="" name="description">
    
</head>


<body>
<!-- Table Start -->
{{ include('_navbar.html.twig') }}
<div class="container-fluid pt-0 px-3">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="mb-2">
                    <h3 class="text-center text-uppercase">Saisie Budg√©taire</h3>
                    <a href="{{ path('app_budget_nouvelle_ligne')}}" class="btn btn-outline-success rounded-pill"><i class="fa fa-solid fa-plus"></i></a> 
                </div>

                <div class="table-responsive ">
                    {{ form_start(faitForm) }}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Geography</th>
                                <th>Channel</th>
                            </tr>
                            <tr>
                                <td>{{ form_widget(faitForm.geographie) }}</td>
                                
                                <td>{{ form_widget(faitForm.canal) }}</td>
                            </tr>
                            <tr class= "table">
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col" class="table-danger">Actual</th>
                                <th scope="col" class="table-danger">Budget</th>
                                <th scope="col" class="table-danger">Variance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {# On boucle sur les lignes des faits #}
                            

                                <tr>
                                    <th class="table-danger">{{ form_widget(faitForm.produit) }}</th>
                                    <th class="table-danger">Price</th>
                                    <td>{{ form_widget(faitForm.actual) }}</td>
                                    <td>{{ form_widget(faitForm.budget) }}</td>

                                    <td> 
                                        <button type="submit" class="btn btn-outline-success rounded-pill"><i class="fa fa-solid fa-check"></i></button>
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                    {{ form_end(faitForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->
</body>
{% endblock %}
